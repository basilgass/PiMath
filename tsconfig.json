{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* strictness */
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    /* Transpile */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ESNext",
    ],
  },
  "include": [
    "src",
    "tests",
    "demo",
  ]
}