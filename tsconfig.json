{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // "allowImportingTsExtensions": true,
    // "noEmit": true,
    /* strictness */
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    /* Transpile */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "removeComments": true,
    "lib": [
      "ESNext",
    ],
  },
  "include": [
    "src",
    "tests",
    "*.config.js",
    "*.json",
    "demo"
  ]
}