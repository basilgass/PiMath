{
  "typedocOptions": {
    "entryPoints": ["src/main.ts"],
    "out": "docs",
  },
  "compilerOptions": {
    "outDir": "./esm/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ]
}