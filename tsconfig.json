{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext","dom"],
    "useDefineForClassFields": true,
  },
  "include": [
    "src",
    "tests",
    "*.config.js",
    "demo",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib/**/*.d.ts",
    "tests/**/*.d.ts"
  ]
}