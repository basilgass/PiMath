{
  "compilerOptions": {
    /* Base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* strictness */
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    /* Transpile */
    "module": "ESNext",
    "moduleResolution": "bundler",
    /* Build */
    "rootDir": "src",
    "outDir": "./dist",
    "removeComments": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "lib": [
      "ESNext",
    ],
  },
  /* Include only the src folder */
  "include": [
    "src",
  ]
}